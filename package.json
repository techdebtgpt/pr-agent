{
  "name": "pr-agent",
  "version": "0.1.0",
  "description": "Simple AI GitHub PR analyzer",
  "main": "dist/index.js",
  "bin": {
    "pr-agent": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "github",
    "pr",
    "pull-request",
    "code-review",
    "ai",
    "claude",
    "analyzer",
    "cli"
  ],
  "scripts": {
    "build": "tsc",
    "build:action": "ncc build src/action.ts -o dist --source-map",
    "package": "npm run build:action",
    "prepublishOnly": "npm run build",
    "dev": "npm run build && probot run ./dist/index.js",
    "start": "probot run ./dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@anthropic-ai/sdk": "^0.24.3",
    "chalk": "^4.1.2",
    "probot": "^12.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.7.1",
    "@vercel/ncc": "^0.38.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Your Team",
  "license": "MIT"
}
